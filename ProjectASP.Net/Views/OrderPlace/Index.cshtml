
<table  border="1">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Price</th>
    </tr>
    @foreach (var i in ViewBag.listProduct)
    {
        <tr>
            <td>@i.Id</td><td>@i.ProductName</td><td>@i.ProductPrice</td><td>@Html.ActionLink("Order Now", "OrderNow", "ShoppingCart", new { id = i.Id},null)</td>
        </tr> 
    }
</table>